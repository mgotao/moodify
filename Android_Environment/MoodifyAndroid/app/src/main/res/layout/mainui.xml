<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/layoutbackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditText
        android:id="@+id/searchQtv"
        android:height="50dp"
        android:hint="Enter search term"
        android:background="@drawable/tvbackground"
        android:paddingTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RadioGroup
        android:id="@+id/radiogroup"
        android:background="@drawable/tvbackground"
        app:layout_constraintTop_toBottomOf="@id/searchQtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatRadioButton
            android:text="Exciting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatRadioButton
            android:text="Angry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatRadioButton
            android:text="Dancey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatRadioButton
            android:text="Workout Friendly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatRadioButton
            android:text="Music to Study to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatRadioButton
            android:text="Driving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RadioGroup>
    <LinearLayout
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/radiogroup"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <NumberPicker
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:layout_weight=".1"
            android:background="@drawable/tvbackground"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="242dp" />

        <TextView
            android:paddingTop="80dp"
            android:textAlignment="center"
            android:layout_weight="1.9"
            android:text="Number of Songs"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <Button

        android:background="@drawable/buttonbackground"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Create Playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</android.support.constraint.ConstraintLayout>