<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:background="@drawable/layoutbackground"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText
        android:paddingLeft="7dp"
        android:background="@drawable/tvbackground"
        android:id="@+id/searchTermEditText"
        android:hint="Search Query"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <EditText
        android:paddingLeft="7dp"
        android:background="@drawable/tvbackground"
        android:id="@+id/numSongsEditText"
        android:hint="Number of songs"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <Button
        android:id="@+id/createPlaylistSubmit"
        android:onClick="onGeneratePlaylist"
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="onBackToPlayer"
        android:id="@+id/buttonBackToPlayer"
        android:text="Back to Player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>